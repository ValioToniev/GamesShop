@model List<GamesShop.Infrastructure.Cart.CartModel>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Shopping Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td><img src="@item.Picture" alt="@item.ProductName" width="100" /></td>
                    <td>@item.CurrentPrice</td>
                    <td>@item.CurrentDiscountPercentage%</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.CurrentPrice * (1 - item.CurrentDiscountPercentage / 100))</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="ClearCart" class="btn btn-warning">Clear Cart</a>
    <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
}
